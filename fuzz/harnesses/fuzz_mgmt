T=fuzz_mgmt

sync() {
	mkdir ${T}
	ssh kafka "cd ${T} && tar -cf- corpus" | tar -C ${T} -xf-
}

run() {
	build/fuzz/fuzz_mgmt -max_len=16384 -runs=1 ${T}/corpus \
		2>/dev/null 1>&2
}

case "$1" in
sync)
	sync
	;;
run)
	run
	exit 0
	;;
*)
	echo unknown command "$1"
	exit 1
esac
